ARG BASE

FROM $BASE

ARG AUTHOR
ARG VERSION
LABEL maintainer=${AUTHOR} version=${VERSION}

ARG TARGETOS
ARG TARGETARCH


USER root
RUN apt-get update &&  apt-get install -y git
RUN rm -r /srv/gitlab/public/assets
ADD ./public/assets /srv/gitlab/public/assets 
ADD ./lib/gitlab /srv/gitlab/lib/gitlab 
ADD ./app/views /srv/gitlab/app/views  
ADD ./app/helpers /srv/gitlab/app/helpers  
ADD ./app/config/initializers /srv/gitlab/app/config/initializers

USER $GITLAB_USER:$GITLAB_USER
